{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "build",
		"rootDir": "src",
		"skipLibCheck": false,
		"sourceMap": true,
		"sourceRoot": "/",
		"strict": true,
		"target": "ESNext"
	},
	"exclude": ["build", "node_modules"]
}
